<h1>Recent uses of: <%= @hashtags.first.tag %></h1>

<% @hashtags.each do |tag| %>
<ul>
	<li><img class="student_image img-circle" src="<%= tag.user.photo %>">
	<%= tag.user.name %> commented on 
		<%= link_to "#{tag.comment.story.title}", story_path(tag.comment.story) %>
		 and said: 
		<li><%= render partial: '/comments/hashtag_rendering', locals: {body: tag.comment.body} %></li>
	</li>
</ul>
<% end %>