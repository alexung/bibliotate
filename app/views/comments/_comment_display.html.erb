<div class="popup">
  <h1>What are people saying?</h1>
  <button data-comment="remove">X</button>
  <ul data-comment="display">
    <% @comments.each do |comment| %>
      <%= render partial: '/comments/render_comment', locals: {comment: comment} %>
    <% end %>
  </ul>
  <%= render partial: 'comment_form',  locals: {id: @sentence_id} %>
</div>
